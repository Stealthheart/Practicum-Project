        source: 'Images/test.png'
        size: 150, 150
        pos_hint: {'center_x': .2, 'center_y': .25}
        opacity: .5
    Image:
        source: 'Images/blackImg.png'
        size: 150, 150
        pos_hint: {'center_x': .7, 'center_y': .65}
        opacity: .5
    Image:
        source: 'Images/helloImg.png'
        size: 150, 150
        pos_hint: {'center_x': .75, 'center_y': .15}
        opacity: .5
    RelativeLayout:
        canvas:
            Line:
                width: 5
                rectangle: (25, 600, 450, 160)
            Line:
                width: 5
                rectangle: (25, 25, 450, 575)
        size: 500, 800
        Label:
            text: 'Japanese'
            font_size: 40
            size: 100, 100
            pos_hint: {'center_x': .5, 'center_y': .9}
        Label:
            text: 'Character Recognizer'
            font_size: 40
            size: 100, 100
            pos_hint: {'center_x': .5, 'center_y': .8}
        Button:
            text: 'Courses'
            font_size: 20
            on_release: root.loadCourseScreen()
            size_hint: None, None
            size: 300, 50
            pos_hint: {'center_x': .5, 'center_y': .6}
        Button:
            text: 'Profiles'
            font_size: 18
            on_release: root.loadProfileScreen()
            size_hint: None, None
            size: 300, 50
            pos_hint: {'center_x': .5, 'center_y': .5}
