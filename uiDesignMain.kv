<QuestionScreen>
    name: 'question'
    id: questionScrn
    canvas.before:
        Line:
            width: 5
            rectangle: (25, 225, 450, 375)
    RelativeLayout:
        MyPaintWidget:
            id: drawingCanvas
        Label:
            id: questionNum
            text: 'Q: 1/20'
            font_size: 20
            pos_hint: {'center_x': .9, 'center_y': .95}
        Label:
            id: questionLabel
            text: 'Example question 1'
            font_size: 28
            pos_hint: {'center_x': .5, 'center_y': .8}
        Label:
            id: correctAns
            text: ''
            font_size: 22
            pos_hint: {'center_x': .5, 'center_y': .23}
        Label:
            id: userAns
            font_name: 'fonts/meiryo.ttf'
            text: ''
            font_size: 18
            pos_hint: {'center_x': .5, 'center_y': .20}
        Label:
            id: trueAns
            font_name: 'fonts/meiryo.ttf'
            text: ''
            font_size: 18
            pos_hint: {'center_x': .5, 'center_y': .17}
        Button:
            text: 'Clear'
            font_size: 18
            on_release: drawingCanvas.canvas.clear()
            size_hint: None, None
            size: 80, 40
            pos_hint: {'center_x': .12, 'center_y': .23}
        Button:
            id: submitBtn
            text: 'Submit'
            font_size: 18
            on_release:
                submitBtn.disabled = True
                drawingCanvas.submitAnswer()
                correctAns.text = root.getAnswerResult()
                userAns.text = "You wrote: " + root.getUserAnswer()
                trueAns.text = "Correct Answer: " + root.getCorrectAnswer()
                nextQBtn.disabled = False
            size_hint: None, None
            size: 80, 40
            pos_hint: {'center_x': .88, 'center_y': .23}
        Button:
            id: nextQBtn
            text: 'Next Question'
            font_size: 20
            on_release:
                drawingCanvas.canvas.clear()
                root.getNextQuestion()
                correctAns.text = ""
                userAns.text = ""
                trueAns.text = ""
                submitBtn.disabled = False
                nextQBtn.disabled = True
            size_hint: None, None
            size: 150, 40
            pos_hint: {'center_x': .81, 'center_y': .07}
            disabled: True
        Button:
            text: 'Back to \nCourses'
            font_size: 15
            on_release:
                drawingCanvas.canvas.clear()
                app.root.current = 'course'
            size_hint: None, None
            size: 80, 40
            pos_hint: {'center_x': .1, 'center_y': .95}

